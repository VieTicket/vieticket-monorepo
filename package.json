{
  "name": "vieticket",
  "devDependencies": {
    "prettier": "^3.7.2",
    "turbo": "^2.6.3",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1"
  },
  "packageManager": "bun@1.2.15",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
